{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "lib": ["es2021", "dom"],
    "types": ["chrome", "node"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@test/*": ["src/test/*"]
    }
  },
  "include": [
    "./src/main/**/*.ts"
  ]
}
