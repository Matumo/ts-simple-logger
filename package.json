{
  "name": "ts-simple-logger",
  "version": "0.2.2",
  "description": "Simple console logger for browsers and Node.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matumo/ts-simple-logger.git"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=24 <26"
  },
  "scripts": {
    "lint": "npm run lint:check",
    "lint:check": "eslint ./src --max-warnings=0",
    "lint:fix": "eslint ./src --max-warnings=0 --fix",
    "clean": "npm run clean:dist && npm run clean:test",
    "clean:dist": "rimraf dist",
    "clean:test": "rimraf test-results coverage",
    "check": "npm run lint && npm run check:type",
    "check:type": "npm run check:type:src && npm run check:type:test",
    "check:type:src": "tsc --noEmit -p ./tsconfig.json",
    "check:type:test": "npm run build && npm run check:type:test:tsc",
    "check:type:test:tsc": "tsc --noEmit -p ./src/test/tsconfig.json",
    "build": "npm run build:clean && npm run build:bundle && npm run build:types",
    "build:clean": "npm run clean:dist",
    "build:bundle": "vite build --config ./vite.config.ts",
    "build:types": "tsc --emitDeclarationOnly -p ./tsconfig.json --outDir ./dist",
    "test": "npm run test:unit && npm run test:integration",
    "test:install": "playwright install --with-deps",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:unit:coverage": "vitest run --config vitest.unit.config.ts --coverage",
    "test:integration": "npm run test:integration:node && npm run test:integration:browser",
    "test:integration:node": "npm run build && vitest run --config vitest.node.config.ts",
    "test:integration:browser": "npm run build && playwright test",
    "all": "npm run clean && npm run check && npm run build && npm run test",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  }
}
