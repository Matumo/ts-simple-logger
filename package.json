{
  "name": "ts-simple-logger",
  "version": "0.2.0",
  "description": "Simple console logger for browsers and Node.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matumo/ts-simple-logger.git"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=24 <26"
  },
  "scripts": {
    "lint:fix": "eslint ./src --max-warnings=0 --fix",
    "lint": "eslint ./src --max-warnings=0",
    "build:clean": "rm -rf dist/",
    "build:check": "tsc --noEmit -p ./tsconfig.json && tsc --noEmit -p ./src/test/tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly -p ./tsconfig.json --outDir ./dist",
    "build:vite": "vite build --config ./vite.config.ts",
    "build": "npm run build:clean && npm run build:check && npm run build:vite && npm run build:types",
    "test:clean": "rm -rf test-results/ coverage/",
    "test:unit:coverage": "vitest run --coverage",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  }
}
